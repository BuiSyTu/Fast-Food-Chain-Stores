<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/static/user/stylesheets/SelectShop.css">
	<link rel="stylesheet" type="text/css" href="/static/user/stylesheets/common.css">

	<title>Hello, world!</title>
</head>
<body>
	<div class="container-fluid h-100">
		<div class="row h-100">
			<aside class="col-12 col-md-2 p-0 bg-dark sticky-top">
				<nav class="navbar navbar-expand navbar-dark bg-dark flex-md-column flex-row align-items-start py-2">
					<div class="collapse navbar-collapse">
						<ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
							<li class="nav-item">
								<a class="nav-link pl-0 text-nowrap" href="/users"><i class="fa fa-bullseye fa-2x"></i> <span class="font-weight-bold">Brand</span></a>
							</li>
							<br>
							<li class="nav-item">
								<a class="nav-link pl-0" href="/users"><i class="fa fa-home fa-2x"></i> <span class="d-none d-md-inline">Trang chủ</span></a>
							</li>
							<li class="nav-item">
								<a class="nav-link pl-0" href="/users/previousOrder"><i class="fa fa-clock-o fa-2x"></i> <span class="d-none d-md-inline">Đơn hàng của tôi</span></a>
							</li>
							<li class="nav-item">
								<a class="nav-link pl-0" href="/users/favoriteFood"><i class="fa fa-heart fa-2x"></i> <span class="d-none d-md-inline">Thực đơn yêu thích</span></a>
							</li>
							<br>
							<li class="nav-item">
								<a class="nav-link pl-0" href="#"><i class="fa fa-sign-out fa-2x"></i> <span class="d-none d-md-inline">Đăng xuất</span></a>
							</li>
						</ul>
					</div>
				</nav>
			</aside>
			<main class="col bg-faded py-3" style="min-height: 650px">
				<div class="content container">
					<div class="greeting m-5">
						<h2 class="text-center font-weight-normal">Chọn cửa hàng</h2>
					</div>
					<div class="row justify-content-center">
						<div class="col-6">
							<div class="progress mb-5">
								<div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
						</div>
					</div>

					<div class="cards row justify-content-center">
						<% if (data && data.stores){%>
							<% for(var i = 0; i < (data.stores.length / 2); i++) {%>
								<div class="card-deck col-md-10">
									<div class="card mb-3" storeId="<%= data.stores[i * 2].s_id %>">
										<div class="row no-gutters">
											<div class="card-body">
												<h5 class="card-title"><%= data.stores[i * 2].s_name %></h5>
												<p class="card-text"><%= data.stores[i * 2].s_address %></p>
												<p class="card-text text-success"><i class="fa fa-clock-o"></i><small> Open now</small></p>
											</div>
										</div>
									</div>
									<% if (!((data.stores.length % 2 != 0) && (i == data.stores.length / 2 - 0.5 ))){%>
										<div class="card mb-3" storeId="<%= data.stores[i * 2 + 1].s_id %>">
											<div class="row no-gutters">
												<div class="card-body">
													<h5 class="card-title"><%= data.stores[i * 2 + 1].s_name %></h5>
													<p class="card-text"><%= data.stores[i * 2 + 1].s_address %></p>
													<p class="card-text text-success"><i class="fa fa-clock-o"></i><small> Open now</small></p>
												</div>
											</div>
										</div>
									<%}%>
								</div>
							<%}%>
						<%}%>
					</div>

					<div class="footer">

					</div>
				</div>
			</main>
		</div>
	</div>




	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.1.1.min.js">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
	<script src="/static/user/js/SelectShop.js"></script>
</body>
</html>
